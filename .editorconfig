# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ini,py,rst}]
indent_style = space
indent_size = 4

[*.py]
line_length = 80
multi_line_output = 3

[*.{css,html,js,json,scss,yml}]
indent_style = space
indent_size = 2

# minified JavaScript files should not be modified
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = tab

[Makefile]
indent_style = tab
